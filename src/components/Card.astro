---
import Icon from "./Icon.astro";

const { name, link, logo } = Astro.props;
---

<a href={link} class="">
  <div
    class="flex flex-col items-center rounded-sm border-2 border-pink-500/40 p-6"
  >
    <Icon icon={logo} color="#ec4899" height="40" width="40" />
    <span class="text-lg text-gray-300/75">
      {name}
    </span>
  </div>
</a>
