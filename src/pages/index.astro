  {
    link: "https://github.com/sushij",
    name: "Github",
    logo: "github",
  },
  {
    link: "https://x.com/sushidotgg",
    name: "Twitter",
    logo: "twitter_new",
  },
  {
    link: "",
    name: "Email",
