---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
const projects = [
  {
    title: "Windows98 Paint",
    tech: ["React", "Redux", "RTK", "Context"],
    desc: "UI inspired by windows 98, lets you draw and export drawings to share with others.",
    links: {
      github: "https://github.com/sushij",
      live: "https://paint.itzsushi.xyz",
    },
  },
  {
    title: "Snippets (WIP)",
    tech: ["Go"],
    desc: "Sign up and start saving snippets quickly and reliably to comeback to later.",
    links: { github: "https://github.com/sushij" },
  },
];
const comfortable = ["Typescript", "Javascript", "React", "Node", "Tailwind"];
const learn = ["Nextjs", "Vue", "Angular", "Go", "Elixir", "Java", "Docker"];
---

<BaseLayout title="Sushant Sharma | About">
  <h5 class="mb-14 mt-10 text-sm font-bold italic text-pink-500/90">About</h5>
  <main class="flex flex-grow justify-center text-gray-200/90">
    <div>
      <p class="pb-6 text-sm">
        A <span class="italic">full-stack developer</span>
        driven by curiosity for learning and a deep love for building innovative
        solutions. I like to constantly seek out new challenges and opportunities
        to expand my skill set. Whether it's mastering the intricacies of database
        management systems or diving into the latest technologies, I thrive on the
        thrill of discovery and the satisfaction of turning ideas into reality.
      </p>
      <p class="pt-6 text-sm">
        Some technologies I'm fairly comfortable with &dash;
      </p>
      <ul class="p-2 text-sm">
        {
          comfortable.map((c) => (
            <li class="text-gray-300/85">
              <span class="text-xs text-pink-500/90">&not;</span>
              {c}
            </li>
          ))
        }
      </ul>
      <p class="pt-2 text-sm">Some things I'm familiar with &dash;</p>
      <ul class="p-2 text-sm">
        {
          learn.map((c) => (
            <li class="text-gray-300/85">
              <span class="text-xs text-pink-500/90">&not;</span>
              {c}
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</BaseLayout>
